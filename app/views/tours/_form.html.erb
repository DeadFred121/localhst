<%= form_with(model: tour, local: true, :class => "form-horizontal tour-form-background") do |form| %>
  <% if tour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tour.errors.count, "error") %> prohibited this tour from being saved:</h2>

      <ul>
      <% tour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, :class => "col-sm-1 control-label" %>
    <div class="col-sm-8">
      <%= form.text_field :title, id: :tour_title, :class => "form-control" %>
    </div>
  </div>  

  <div class="form-group">
    <%= form.label :title_img,'Banner Image', :class => "col-sm-1 control-label" %>
    <%= form.file_field :title_img, class: 'form-control-file'  %>
  </div>

  <div class="form-group">
    <%= form.label :summary, :class => "col-sm-1 control-label" %>
    <div class="col-sm-8">
      <%= form.trix_editor :summary, id: :tour_summary %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :est_time, 'Number of hours', :class => "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= form.text_field :est_time, id: :tour_title, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :body, :class => "col-sm-1 control-label" %>
    <div class="col-sm-8">
      <%= form.trix_editor :body, id: :tour_body %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :city, :class => "col-sm-1 control-label" %>
    <div class="col-sm-8">
      <%= form.text_field :city, id: :tour_city, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :tag_list, 'Tags (separated by commas)', :class => "col-sm-1 control-label" %><br/>
    <div class="col-sm-8">
      <%= form.text_field :tag_list, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-1">
      <%= form.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
